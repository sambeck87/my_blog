<%= render('registrations/navbar') %>
<%= render 'user_card', user: @user %>
<div class="bio border">
<h3>Bio</h3>
<p><%= @user.bio %></p>
</div>
<ul>
  <% posts = User.recent_posts(@user.name) %>
  <% posts.all.each_with_index do |post, i| %>
    <li><%= link_to render('posts/post_card', post: post, i: i), user_post_path(@user, post) %></li>
  <% end %>
</ul>
<div class="button border">
<%= link_to 'See all posts', user_posts_path(@user) %>
</div>
